---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  ogUrl: string;
}

const { title, description, ogUrl } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={ogUrl} />
    <meta property="og:type" content="website" />

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="font-[Inter,sans-serif] text-[#111827] bg-white antialiased">
    <!-- NAV -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-[#e5e7eb]">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
        <a href="/" class="text-[#1a3a2a] font-bold text-xl flex items-center gap-1">
          <span>⚙️</span> Sprocket
        </a>
        <div class="flex items-center gap-6">
          <a href="/#pricing" class="hidden sm:inline text-[#111827] hover:text-[#1a3a2a] text-sm font-medium">Pricing</a>
          <a href="/about" class="hidden sm:inline text-[#111827] hover:text-[#1a3a2a] text-sm font-medium">About</a>
          <a
            href="/waitlist"
            class="bg-[#1a3a2a] text-white rounded-lg px-4 py-2 text-sm font-semibold hover:bg-[#1a3a2a]/90"
          >
            Join the Waitlist
          </a>
        </div>
      </div>
    </nav>

    <!-- Spacer for fixed nav -->
    <div class="h-16"></div>

    <main>
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class="bg-[#111f17] text-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Col 1 -->
          <div>
            <div class="font-bold text-lg flex items-center gap-1 mb-2">
              <span>⚙️</span> Sprocket
            </div>
            <p class="text-white/70 text-sm">Payments built for bike shops.</p>
            <p class="text-white/70 text-sm mt-1">sprocketpos.com</p>
          </div>
          <!-- Col 2 -->
          <div>
            <h3 class="font-semibold mb-3 text-sm">Links</h3>
            <ul class="space-y-2 text-sm text-white/70">
              <li><a href="/" class="hover:text-white">Home</a></li>
              <li><a href="/#pricing" class="hover:text-white">Pricing</a></li>
              <li><a href="/waitlist" class="hover:text-white">Waitlist</a></li>
              <li><a href="/about" class="hover:text-white">About</a></li>
            </ul>
          </div>
          <!-- Col 3 -->
          <div>
            <h3 class="font-semibold mb-3 text-sm">Get in touch</h3>
            <a href="mailto:hello@sprocketpos.com" class="text-sm text-white/70 hover:text-white">
              hello@sprocketpos.com
            </a>
          </div>
        </div>
      </div>
      <div class="border-t border-white/10">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-4 text-center text-sm text-white/50">
          &copy; 2025 Sprocket. Built for bike shops.
        </div>
      </div>
    </footer>
  </body>
</html>
